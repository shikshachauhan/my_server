<div class="brand">
   <font color="blue"><strong>Edit Survey</strong></font> 
 </div>
<head>
<style>
/*table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}*/
th, td {
  color: black;
    padding: 5px;
}
th {
  color: black;
    text-align: center;
}
</style>
</head>
<table cellspacing="10"  style="width:100%">
  <tr>
    <th>FORM ID</th>
    <th>SURVEY ID</th>
    <th>NAME</th>
    <th>TYPE</th>
    <th colspan="3"></th>
  </tr>
 
  <% @response['objects'].each do |r| %>
    <tr>
      <td><%= r['form']['id'] %></td>
      <td><%= r['id'] %></td>
      <td><%= r['name'] %></td>
      
      

<%= form_tag(:form_id => r['form']['id'], :controller => "survey", :action => "questionattr", :method => "post") do %>
   <td>
   <ul><%= select_tag(:type, options_for_select([["Voice Response","ff"],["Multiple Choice","mc"],["Quantitative","qu"]])) %></ul>
   </td>
   <td>
   <%= submit_tag "Add Question", :class => "btn btn-default" %>
   </td>
<% end %>


      <!--<td><%#= button_to "View Questions", {:controller => "survey", :action => "survey_question", :form_id => r['form']['id']} , :method=>:post , :class => "button"  %></td> -->
      <%#= link_to "Add Question", survey_questionattr_path(:form_id => r['form']['id']),:method => :post ,  :class => "btn btn-default" %>
    </tr>
  <% end %>
</table>
