      <div class="form-top"> <!-- 8 -->
        <h3  align="center"><font color="Black"><strong>Questions of FORM ID <%= @form_id %></strong></font></h3>
        <table cellspacing="10"  style="width:100%">
          <tr>
            <th>Question ID</th>
            <th>TEXT</th>
            <th>TYPE</th>
            <th>OTHER</th>
            <th>Audio Prompt</th>
          </tr>

          <% @question_response['objects'].each do |r| %>
              <tr>
                <td align="center"><%= r['question']['id'] %></td>
                <td align="center"><%= r['question']['text'] %></td>
                <% case r['question']['type']
                     when "mc" %>
                    <td align="center">Multiple Choice</td>
                    <td align="center"><strong>Choices : </strong><%= r['question']['choices'] %></td>
                <% when "ff" %>
                    <td align="center">Voice Reponse</td>
                    <td align="center"><strong>Max Duration : </strong><%= r['question']['max_duration'] %></td>
                <% when "qu" %>
                    <td align="center">Quantitative</td>
                    <td align="center"><strong>Max Digits : </strong><%= r['question']['max_digits'] %></td>
                <% end %>
                <td align="center"><%= link_to "Listen Audio Prompt", "#{r['question']['prompt_audio']['url']}" , :class => "btn btn-default" %></td>

              </tr>
          <% end %>
        </table>
      </div> <!-- 8 -->
