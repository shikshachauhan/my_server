    </head> <!-- 2  -->

    <body> <!-- 3 -->
            <div class="brand">  <!--  3 -->
                <img src="/assets/logo.jpg" alt="logo" />

                <h1><font color="white" face="Verdana" size="20">GRAMVAANI SOOCHNA SANCHAR</font></h1>
            </div>  <!--  3 -->
             <!-- Navigation bar -->
          <font size = 4> <!-- 4  -->

            <nav class="navbar navbar-default" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">Brand</a>
                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <!--div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1"-->
                    <div class="single-page-nav sticky-wrapper" id="tmNavbar">
                        <ul class="nav navbar-nav">                           
                             <li>
                                <!--a href="#section1">Homepage</a-->
                                <%= link_to 'Home', :action => 'homepage', :controller => 'welcome' %>
                            </li>
                            <li>
                                <%= link_to 'Sign In', :action => 'new', :controller => 'login_portal' %>
                            </li>
                            <li>
                                <%= link_to 'Contact', :action => 'contact', :controller => 'welcome' %>
                            </li>                                         
                        </ul>
                    </div><!-- /.navbar-collapse -->                    
                </div><!-- /.container -->                
            </nav>
          </font>  <!--  4 -->        
        <!--div class="top-content"--> <!-- 4 --><!-- Top content -->           
            <!--div class="inner-bg"-->
                <div class="container"> <!-- 5 -->
                    <div class="row"> <!-- 6 -->
                        <div class="col-sm-10 col-sm-offset-1 form-box"> <!-- 7 -->
                            <div class="form-top"> <!-- 8 -->
                                <div class="form-top-left"> 
                                    <h3><font color="Black"><strong>Register New User</strong></font></h3>
                                    <p><font color="Black"><strong>Enter Details</strong></font></p>
                                </div>
                            </div> <!-- 8 -->
                            <div class="form-bottom"> <!-- 9 -->
                                <form id="identicalForm" data-toggle="validator" accept-charset="UTF-8" action="create" controller="ngo_users" method="post" role="form"  class="form-horizontal"> <!-- 10 -->
                                    <div class="form-group">
                                        <label class="control-label col-sm-2" for="ngoname">NGO Name</label>
                                        <div class="col-sm-10"> 
                                            <input type="text" name="ngoname" placeholder="NGO Name" class="form-control" id="ngoname" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2" for="phone">Contact</label>
                                        <div class="col-sm-10"> 
                                            <!--input type="number" data-minlength="10" maxlength="10" size=""10" name="phone" placeholder="Contact" class="form-control" id="phone" required-->
                                            <!--input type="text" class="input-medium bfh-phone" data-country="IN" name="phone" placeholder="888-888-8888" id="phone" required-->
                                            <input type="text" class="form-control bfh-phone" data-format="+91 ddd-ddd-dddd" name="phone" placeholder="888-888-8888" id="phone" required>
                                          <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2" for="city">Location</label>
                                        <div class="col-sm-10"> 
                                            <!--input type="text" name="city" placeholder="Location" class="form-control" id="city" required-->
                                            <select class="form-control bfh-states" name="city" id="city" data-country="IN"></select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2" for="website">Website URL</label>
                                        <div class="col-sm-10"> 
                                            <input type="url" name="website" placeholder="http://www.abc.com" class="form-control" id="website" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2" for="email">Email</label>
                                        <div class="col-sm-10"> 
                                            <input type="email" name="email" placeholder="Email" class="form-control" id="email" data-error="The email address is invalid" required>
                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2" for="field">Field</label>
                                        <div class="col-sm-10"> 
                                            <input type="text" name="field" placeholder="Field" class="form-control" id="field" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2" for="password">Password</label>
                                        <div class="col-sm-10"> 
                                            <input type="password" data-minlength="6" name="password" placeholder="Password" class="form-control" id="password" required>
                                          <div class="help-block">Minimum of 6 characters</div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                      <label class="control-label col-sm-2" for="password_confirmation">Password</label>
                                      <div class="col-sm-10">
                                        <input type="password" name="password_confirmation" class="form-control" id="password_confirmation" data-match="password" data-match-error="Whoops, these don't match" placeholder="Confirm Password" required>
                                        <div class="help-block with-errors"></div>
                                      </div>
                                    </div>
                                    <button type="submit" class="btn" style="color:white"><strong>Submit</strong></button>
                                </form> <!-- 10 -->
                            </div> <!-- 9 -->
                        </div> <!-- 7 -->
                    </div> <!-- 6 -->
                     <p><font color="black"><strong>Already Registered? <%= link_to 'Sign In now', :action => 'new', :controller => 'login_portal' %></strong></font></p>
                </div> <!-- 5 -->
            <!--/div-->            
        <!--/div--> <!-- 4-->


    <footer>
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <p>Copyright &copy; GramVaani</p>
          </div>
        </div>
      </div>
    </footer>

    <!-- jQuery -->
    <script src="/assets/jquery.js"></script>
    <script src="/assets/bootstrap-form-helpers/bootstrap-formhelpers-phone.js"></script>
    <script src="/assets/bootstrap-form-helpers/bootstrap-formhelpers-states.js"></script>
    <script src="/assets/bootstrap-form-helpers/bootstrap-formhelpers-countries.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="/assets/bootstrap.min.js"></script>
    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>

    <script>
      $(document).ready(function () {
        $('.dropdown-toggle').dropdown();
      });
    </script>
    <!-- Script to Activate the Carousel -->
    <script>
      $('.carousel').carousel({
        interval: 5000 //changes the speed
      })
    </script>
    <script>
      $(document).ready(function() {
        $('#identicalForm').formValidation({
          framework: 'bootstrap',
          icon: {
            valid: 'glyphicon glyphicon-ok',
            invalid: 'glyphicon glyphicon-remove',
            validating: 'glyphicon glyphicon-refresh'
          },
          fields: {
            password_confirmation: {
              validators: {
                identical: {
                  field: 'password',
                  message: 'The password and its confirm are not the same'
                }
              }
            }
          }
        });
      });
    </script>

    <!-- Javascript -->
    <script src="/assets/jquery-1.11.1.min.js"></script>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="/assets/jquery.backstretch.min.js"></script>
    <script src="/assets/scripts.js"></script>

